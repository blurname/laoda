{
  "name": "laoda",
  "version": "0.0.2",
  "bin": {
    "laoda": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "version-bump": "cox root-version-bump",
    "tag-push": "cox tag-push",
    "dev": "bun --filter \"*\" dev",
    "dev:web": "bun --cwd apps/web dev",
    "dev:server": "bun --cwd apps/server dev",
    "build": "bun run build:web && bun run build:server && bun run build:finalize",
    "build:web": "bun --cwd apps/web build",
    "build:server": "mkdir -p dist && bun build ./apps/server/index.ts --target node --outfile dist/index.js --external @hono/node-server --external ws --external chokidar",
    "build:finalize": "mkdir -p dist/dist-web && cp -r apps/web/dist/* dist/dist-web/",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "oxlint -c .oxlintrc.json",
    "format": "oxfmt ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "chokidar": "^5.0.0",
    "hono": "^4.11.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "oxfmt": "^0.26.0",
    "oxlint": "latest",
    "typescript": "^5.0.0",
    "coxswain": "1.0.11"
  }
}