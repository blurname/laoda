{
  "name": "laoda",
  "version": "0.0.1",
  "bin": {
    "laoda": "output-gitignore/laoda"
  },
  "files": [
    "output-gitignore/laoda",
    "README.md"
  ],
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "version-bump": "cox root-version-bump",
    "tag-push": "cox tag-push",
    "dev": "bun --filter \"*\" dev",
    "dev:web": "bun --cwd apps/web dev",
    "dev:server": "bun --cwd apps/server dev",
    "build": "bun run build:web && bun run build:embed && bun run build:server",
    "build:web": "bun --cwd apps/web build",
    "build:embed": "bun scripts/embed-assets.ts",
    "build:server": "mkdir -p output-gitignore && bun build ./apps/server/index.ts --compile --outfile output-gitignore/laoda",
    "start": "NODE_ENV=production ./output-gitignore/laoda",
    "lint": "oxlint -c .oxlintrc.json",
    "format": "oxfmt ."
  },
  "devDependencies": {
    "oxfmt": "^0.26.0",
    "oxlint": "latest",
    "typescript": "^5.0.0",
    "coxswain": "1.0.11"
  }
}