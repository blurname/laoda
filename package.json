{
  "name": "laoda",
  "version": "0.0.3",
  "type": "module",
  "bin": {
    "laoda": "dist/index.js"
  },
  "workspaces": [
    "apps/*"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "version-bump": "cox root-version-bump",
    "tag-push": "cox tag-push",
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm run build:web && pnpm run build:server && pnpm run build:finalize",
    "build:web": "pnpm --filter web build",
    "build:server": "mkdir -p dist && esbuild ./apps/server/index.ts --bundle --platform=node --format=esm --target=node20 --outfile=dist/index.js --external:@hono/node-server --external:ws --external:chokidar --banner:js=\"#!/usr/bin/env node\"",
    "build:finalize": "mkdir -p dist/dist-web && cp -r apps/web/dist/* dist/dist-web/",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "oxlint -c .oxlintrc.json",
    "format": "oxfmt ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "chokidar": "^5.0.0",
    "hono": "^4.11.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "coxswain": "1.0.11",
    "esbuild": "^0.24.0",
    "oxfmt": "^0.26.0",
    "oxlint": "latest",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  }
}